{
  "compilerOptions": {
    "esModuleInterop": true,
    "strict": true,
    "noImplicitAny": true,
    "isolatedModules": true,
    "sourceMap": true,
    "strictNullChecks": true,
    "strictPropertyInitialization": false,
    "target": "es5",
    "lib": ["es2020"],
    "types": ["node"],
    "typeRoots": ["./types", "./node_modules/@types"]
  }
}
